# Process handling.
alias psg="ps aux | grep"
alias ka9="killall -9"
alias k9="kill -9"

# Show human friendly numbers and colors.
alias df="df -h"
alias l="ls -ah"
alias ll="ls -alh"
alias du="du -sh"
alias df="df -h"

# Listing files.
alias lsg="ll | grep"

# Vim stuff.
alias ve="vim ~/.vimrc"
alias v="nvim"

# Quick ZSH editing.
alias ze="v ~/.zshrc"
alias zr="source ~/.zshrc"

# Common shell functions.
alias tf="tail -f"
alias lh="ls -alt | head"
alias tmux="TERM=xterm-256color tmux"
alias cl="clear"
alias ps="ps aux"
alias rm="rm"

# Quick file zipping.
alias gz="tar -zcvf"

# AWS SSH helpers.
alias assh="ssh -i ~/.aws/rdegges.pem ubuntu@"

# Python helpers.
alias pt="python setup.py test"
alias pyc="rm *.pyc"

# Node helpers.
alias nt="npm test"

# Download helpers.
alias dl="youtube-dl --restrict-filenames --no-overwrites --write-description --write-info-json -f bestvideo+bestaudio"

# GitHub helpers.
alias git=hub
